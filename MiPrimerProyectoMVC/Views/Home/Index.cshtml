@model List<Model.Alumno>
@{
    ViewBag.Title = "Inicio";
}
<h2 class="page-header">
    <a href="~/home/crud" class="btn btn-default pull-right">Nuevo alumno</a>
    Alumnos
</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th style="width:200px;">Sexo</th>
            <th style="width:200px;">Fecha de nacimiento</th>
            <th style="width:200px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@(m.Nombre + " " + m.Apellido)</td>
                <td>@(m.Sexo == 1 ? "Hombre" : "Mujer")</td>
                <td>@m.FechaNacimiento</td>
                <td>
                    <a class="btn btn-xs btn-default" href="~/home/ver/@m.id">Visualizar</a>
                    <a class="btn btn-xs btn-primary" href="~/home/crud/@m.id">Editar</a>
                    <a onclick="return confirm('¿Desea eliminar este registro?');" class="btn btn-xs btn-danger" href="~/home/eliminar/@m.id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>